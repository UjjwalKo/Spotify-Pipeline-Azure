{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "sportify-data-factory"
		},
		"AzureDataLakeStorageLinkedService_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AzureDataLakeStorageLinkedService'"
		},
		"SpotifyAzureSQLLinkedService_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'SpotifyAzureSQLLinkedService'"
		},
		"AzureDataLakeStorageLinkedService_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://spotifystorageacc.dfs.core.windows.net/"
		},
		"SpotifyAzureSQLLinkedService_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "spotifypipeline.database.windows.net"
		},
		"SpotifyAzureSQLLinkedService_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "spotify-pipeline-db"
		},
		"SpotifyAzureSQLLinkedService_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "adminujjwal"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "sportify-data-factory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureDataLakeStorageLinkedService_accountKey": {
						"value": "[parameters('AzureDataLakeStorageLinkedService_accountKey')]"
					},
					"SpotifyAzureSQLLinkedService_password": {
						"value": "[parameters('SpotifyAzureSQLLinkedService_password')]"
					},
					"AzureDataLakeStorageLinkedService_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStorageLinkedService_properties_typeProperties_url')]"
					},
					"SpotifyAzureSQLLinkedService_properties_typeProperties_server": {
						"value": "[parameters('SpotifyAzureSQLLinkedService_properties_typeProperties_server')]"
					},
					"SpotifyAzureSQLLinkedService_properties_typeProperties_database": {
						"value": "[parameters('SpotifyAzureSQLLinkedService_properties_typeProperties_database')]"
					},
					"SpotifyAzureSQLLinkedService_properties_typeProperties_userName": {
						"value": "[parameters('SpotifyAzureSQLLinkedService_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}